@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}
<center>
<div asp-validation-summary="All" class="text-danger" style="font-size:larger"  ></div>
</center>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"> </span>
			<br />
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"> </span>
			<br />
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't  have an Account? <a asp-action="Register"> SignUp Now!</a></p>
		<p><a asp-action="ForgetPassword">ForgetPassword</a></p>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}

