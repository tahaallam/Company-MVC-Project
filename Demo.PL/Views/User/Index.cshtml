@model IEnumerable<UserViewModel>
   @{ ViewData["Title"] = "Index";}
<div class="m-2">
    <form class="row offset-2" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="searchvalue" placeholder="Search " />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
</div>
@if(Model.Count() > 0)
{
    <div>
        <table class="table table-striped table-hover table-bordered" style="text-align:center">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(U=>U.Id)</td>
                    <td>@Html.DisplayNameFor(U=>U.FName)</td>
                    <td>@Html.DisplayNameFor(U=>U.LName)</td>
                    <td>@Html.DisplayNameFor(U=>U.Email)</td>
                    <td>@Html.DisplayNameFor(U=>U.PhoneNUmber)</td>
                    <td>@Html.DisplayNameFor(U=>U.Roles)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var User in Model)
                {
                    <tr>
                        <td>@User.Id</td>
                        <td>@User.FName</td>
                        <td>@User.LName</td>
                        <td>@User.Email</td>
                        <td>@User.PhoneNUmber</td>
                        <td>@string.Join("," , User.Roles)</td>
                        <partial name="_ButtonPartialView" model="@User.Id"/>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h1>There Is No Useres</h1>
    </div>
}



