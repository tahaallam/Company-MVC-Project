@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="m-2">
    <form class="row offset-2" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="searchvalue" placeholder="Search " />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
</div>
<a asp-action="Create" class="btn btn-success">Add New Role</a>
@if (Model.Count() > 0)
{
        <table class="table table-striped table-hover table-bordered" style="text-align:center">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(U => U.Id)</td>
                    <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var Role in Model)
                {
                    <tr>
                        <td>@Role.Id</td>
                        <td>@string.Join(",", Role.RoleName)</td>
                        <partial name="_ButtonPartialView" model="@Role.Id" />
                    </tr>
                }
            </tbody>
        </table>
    
}
else
{
    <div>
        <h3 class="mt-3 alert-danger">There Is No Roles</h3>
    </div>
}

